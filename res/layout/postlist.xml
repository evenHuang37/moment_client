<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE4D6"
    android:padding="3dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_item_background"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Item_UserHead"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/default_users_avatar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/Item_UserHead" >

                <!-- 时间 -->

                <TextView
                    android:id="@+id/sendTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:text="08-03 12:00"
                    android:textColor="#815F3D"
                    android:textSize="10sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/sendTime" >

                    <!-- 用户昵称 -->

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:text="UserName"
                        android:singleLine="true"
                        android:textColor="#815F3D"
                        android:textSize="15sp" />
                    <!-- 用户年龄 -->

                    <TextView
                        android:id="@+id/Age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userName"
                        android:layout_marginTop="3dp"
                        android:textColor="#815F3D"
                        android:text="22" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="20dp" >
            
            
            <TextView 
                android:id="@+id/Item_travalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:text="旅行时间："
                android:textSize="15sp"
                android:textColor="#815F3D" />
            
            <TextView 
                android:id="@+id/travalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="2017/4/27-2017/5/1"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:layout_toLeftOf="@+id/Item_travalTime" />
                            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp" >
            
            <TextView 
                android:id="@+id/Item_travalAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:text="旅行地点："
                android:textSize="15sp"
                android:textColor="#815F3D" />
            
            <TextView 
                android:id="@+id/travalAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="重庆"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:layout_toLeftOf="@+id/Item_travalAddress" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp" >
            
            <TextView 
                android:id="@+id/Item_startAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:text="出发地点："
                android:textSize="15sp"
                android:textColor="#815F3D" />
            
            <TextView 
                android:id="@+id/startAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="武汉"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:layout_toLeftOf="@+id/Item_startAddress" />
            
        </LinearLayout>
        
        <TextView 
                android:id="@+id/Item_saying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:text="想说的话："
                android:textSize="15sp"
                android:textColor="#815F3D"
                android:layout_marginTop="10dp" />
        
        <TextView 
                android:id="@+id/saying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   我是一个粉刷匠，粉刷本领强。我有一只小毛驴，却从来也不骑。我在马路上，捡到一分钱。"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/Item_saying" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp" >
            
            <Button
                android:id="@+id/chat"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/messager_send_button"
                android:text="聊一聊"
                android:textSize="12sp" />
            
            </LinearLayout>
        
        

"
        
        </LinearLayout>
</LinearLayout>