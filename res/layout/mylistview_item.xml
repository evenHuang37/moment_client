<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE4D6"
    android:padding="3dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_item_background"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/Item_UserHead"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/default_users_avatar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/Item_UserHead" >

                <!-- 时间 -->

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:text="08-03 12:00"
                    android:textColor="#815F3D"
                    android:textSize="10sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/sendTime" >

                    <!-- 用户昵称 -->

                    <TextView
                        android:id="@+id/Item_UserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:text="UserName"
                        android:singleLine="true"
                        android:textColor="#815F3D"
                        android:textSize="15sp" />
                   
                </RelativeLayout>
                </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/Item_MainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="　　我在人民广场吃着炸鸡呀，而此时此刻你在哪里，饿着。。。"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/Item_MainImg"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/default_content_pic" />
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:text="武汉"
                android:textColor="#815F3D"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/Item_Up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_vote_enable"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/Item_Up_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/icon_for_enable" />

                <TextView
                    android:id="@+id/Item_Up_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="9999"
                    android:textColor="#815F3D"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Item_Down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/Item_Up"
                android:background="@drawable/button_vote_enable"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/Item_Down_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/icon_against_enable" />

                <TextView
                    android:id="@+id/Item_Down_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="9999"
                    android:textColor="#815F3D"
                    android:textSize="15sp" />
            </LinearLayout>
              
            
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>